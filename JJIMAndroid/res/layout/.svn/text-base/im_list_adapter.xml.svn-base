<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:padding="5dip"
    android:orientation="horizontal" >
    
    <ImageView 
        android:id="@+id/im_list_image"
        android:background="@drawable/sc_list_head_border"
        android:layout_marginLeft="4dip"
        android:layout_marginRight="4dip"
        android:layout_gravity="center_vertical"
        android:src="@drawable/icon" android:layout_width="42dip" android:layout_height="42dip" android:contentDescription="@string/im_list_image_description"/>
    
    <LinearLayout android:id="@+id/im_list_text_linear" 
        android:padding="5dip"
        android:paddingBottom="5dip"
        android:orientation="vertical" 
        android:layout_width="fill_parent" 
        android:layout_height="wrap_content">
        <TextView 
            android:id="@+id/im_list_name_text"
            android:textColor="@color/Black"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="16dip"/>
        <TextView 
            android:textColor="@color/LightBlack"
            android:id="@+id/im_list_note_text"
            android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="@string/app_name" android:textSize="12dip"/>
    </LinearLayout>

</LinearLayout>